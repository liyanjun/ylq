<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yunlaiquan.admin.product.dao.ProductDetailDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.yunlaiquan.admin.product.entity.ProductDetailEntity" id="productDetailMap">
        <result property="id" column="id"/>
        <result property="banner" column="banner"/>
        <result property="content" column="content"/>
        <result property="productInfoId" column="product_info_id"/>
    </resultMap>

    <select id="queryObject" resultType="com.yunlaiquan.admin.product.entity.ProductDetailEntity">
		select
					`id`, 
					`banner`, 
					`content`, 
					`product_info_id`
				from product_detail where id = #{value}
	</select>
    <select id="queryObjectByProductInfoId" resultType="com.yunlaiquan.admin.product.entity.ProductDetailEntity">
		select
					`id`,
					`banner`,
					`content`,
					`product_info_id`
				from product_detail
				where product_info_id = #{value}
	</select>

    <select id="queryList" resultType="com.yunlaiquan.admin.product.entity.ProductDetailEntity">
        select
        `id`,
        `banner`,
        `content`,
        `product_info_id`
        from product_detail
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
		select count(*) from product_detail 
	</select>

    <insert id="save" parameterType="com.yunlaiquan.admin.product.entity.ProductDetailEntity" useGeneratedKeys="true"
            keyProperty="id">
		insert into product_detail
		(
			`banner`, 
			`content`, 
			`product_info_id`
		)
		values
		(
			#{banner}, 
			#{content}, 
			#{productInfoId}
		)
	</insert>

    <update id="update" parameterType="com.yunlaiquan.admin.product.entity.ProductDetailEntity">
        update product_detail
        <set>
            <if test="banner != null">`banner` = #{banner},</if>
            <if test="content != null">`content` = #{content},</if>
            <if test="productInfoId != null">`product_info_id` = #{productInfoId}</if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
		delete from product_detail where id = #{value}
	</delete>

    <delete id="deleteBatch">
        delete from product_detail where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>