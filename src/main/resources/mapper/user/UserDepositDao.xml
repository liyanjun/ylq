<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yunquanlai.admin.user.dao.UserDepositDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.yunquanlai.admin.user.entity.UserDepositEntity" id="userDepositMap">
        <result property="id" column="id"/>
        <result property="userInfoId" column="user_info_id"/>
        <result property="depositAmount" column="deposit_amount"/>
        <result property="enableDepositAmount" column="enable_deposit_amount"/>
        <result property="disableDepositAmount" column="disable_deposit_amount"/>
        <result property="emptyBucketNumber" column="empty_bucket_number"/>
    </resultMap>

	<!--
19     方式一：嵌套结果：使用嵌套结果映射来处理重复的联合结果的子集
20              封装联表查询的数据(去除重复的数据)
21         select * from class c, teacher t where c.teacher_id=t.t_id and c.c_id=1
22     -->
	<select id="queryDepositList" resultType="com.yunquanlai.admin.user.entity.UserDepositVO">
         select uDep.*, uInfo.username from user_deposit uDep, user_info uInfo where uDep.user_info_id=uInfo.id and uDep.id=#{id}
     </select>

	<select id="queryObject" resultType="com.yunquanlai.admin.user.entity.UserDepositEntity">
		select
					`id`, 
					`user_info_id`, 
					`deposit_amount`, 
					`enable_deposit_amount`, 
					`disable_deposit_amount`, 
					`empty_bucket_number`
				from user_deposit where id = #{id}
        <if test="isLock != null and isLock == true">for update</if>
	</select>

	<select id="queryList" resultType="com.yunquanlai.admin.user.entity.UserDepositEntity">
		select
		            `id`, 
		            `user_info_id`, 
		            `deposit_amount`, 
		            `enable_deposit_amount`, 
		            `disable_deposit_amount`, 
		            `empty_bucket_number`
				from user_deposit
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from user_deposit 
	</select>
	 
	<insert id="save" parameterType="com.yunquanlai.admin.user.entity.UserDepositEntity" useGeneratedKeys="true" keyProperty="id">
		insert into user_deposit
		(
			`user_info_id`, 
			`deposit_amount`, 
			`enable_deposit_amount`, 
			`disable_deposit_amount`, 
			`empty_bucket_number`
		)
		values
		(
			#{userInfoId}, 
			#{depositAmount}, 
			#{enableDepositAmount}, 
			#{disableDepositAmount}, 
			#{emptyBucketNumber}
		)
	</insert>
	 
	<update id="update" parameterType="com.yunquanlai.admin.user.entity.UserDepositEntity">
		update user_deposit 
		<set>
			<if test="userInfoId != null">`user_info_id` = #{userInfoId}, </if>
			<if test="depositAmount != null">`deposit_amount` = #{depositAmount}, </if>
			<if test="enableDepositAmount != null">`enable_deposit_amount` = #{enableDepositAmount}, </if>
			<if test="disableDepositAmount != null">`disable_deposit_amount` = #{disableDepositAmount}, </if>
			<if test="emptyBucketNumber != null">`empty_bucket_number` = #{emptyBucketNumber}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from user_deposit where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from user_deposit where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>